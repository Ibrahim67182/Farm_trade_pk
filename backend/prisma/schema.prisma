generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}



model User {

id              String             @id @default(uuid())
name            String 
email String                       @unique
googleId        String?            @unique
role            String             @default("user")
createdAt       DateTime           @default(now())
updatedAt       DateTime           @updatedAt
transactions    Transaction[]
auditLog        AuditLog[]  


}


model Commodity {
  id          String       @id @default(uuid())
  name        String       @unique
  unitType    String
  description String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  transactions Transaction[]
  inventory    Inventory?
  rates        CommodityRate[]
}



model Supplier {
  id         String   @id @default(uuid())
  name       String
  company    String?
  email      String?
  phone      String?
  address    String?
  createdAt  DateTime @default(now())
  transactions Transaction[]
}

model Customer {
  id         String   @id @default(uuid())
  name       String
  company    String?
  email      String?
  phone      String?
  address    String?
  createdAt  DateTime @default(now())
  transactions Transaction[]
}


model Transaction {
  id            String      @id @default(uuid())
  type          String
  commodityId   String
  quantity      Decimal
  unit          String
  ratePerUnit   Decimal
  totalAmount   Decimal
  mannEquivalent Decimal?
  supplierId    String?
  customerId    String?
  notes         String?
  dateTime      DateTime    @default(now())
  createdBy     String
  createdAt     DateTime    @default(now())

  commodity   Commodity  @relation(fields: [commodityId], references: [id])
  supplier    Supplier?  @relation(fields: [supplierId], references: [id])
  customer    Customer?  @relation(fields: [customerId], references: [id])
  user        User       @relation(fields: [createdBy], references: [id])
}



model Inventory {
  id           String    @id @default(uuid())
  commodityId  String    @unique
  totalQty     Decimal   @default(0)
  lastUpdated  DateTime  @default(now())

  commodity Commodity @relation(fields: [commodityId], references: [id])
}



model CommodityRate {
  id            String    @id @default(uuid())
  commodityId   String
  pricePerUnit  Decimal
  fetchedAt     DateTime  @default(now())

  commodity Commodity @relation(fields: [commodityId], references: [id])
}


model AuditLog {
  id        BigInt   @id @default(autoincrement())
  userId    String
  action    String
  entity    String
  entityId  String
  details   Json?
  timestamp DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}